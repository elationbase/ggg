---
import { RegisterForm } from '@/components/RegisterForm';
import { BaseLayout, LogLayout } from '@/layouts';
import { ROUTE_CLIENT } from '@/lib/routes';
---

<BaseLayout title="Register to GoGoGolf">
  <LogLayout heading="Create a new account">
    <p class="text-sm mb-8 w-full">
      Already have an account? <a href={ROUTE_CLIENT.login} class="text-blue-400 font-medium">
        Sign in</a
      >
    </p>
    <RegisterForm client:load />
  </LogLayout>
</BaseLayout>
